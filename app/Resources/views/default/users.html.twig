{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Utilisateurs</h1>
                <hr>
                <div>
                    <ul>
                        {% for user in users %}
                            <li>
                                {% if user == app.user %}
                                    {{ user.username }}
                                {% else %}
                                    <a href="{{ path('user',{id:user.id,username:user.username}) }}">
                                        {{ user.username }}
                                    </a>,
                                    {% if user.alive %}
                                        en vie depuis
                                        <span class="badge badge-pill badge-primary">{{ duration(user.dateOfBirth) }} jours</span>

                                    {% else %}
                                        <span class="badge badge-pill badge-danger">mort.</span>
                                    {% endif %}


                                    {#test : {{ 'kiki'|toto() }}#}
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

