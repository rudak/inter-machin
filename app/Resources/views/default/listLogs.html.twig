{% extends main_layout %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Toutes les actions</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <ul class="list-group list-group-flush">
                    {% for log in logs %}
                        <li class="list-group-item {{ log.type }}">
                                <span class="badge badge-info">
                                    {{ log.date|date('d/m/Y - H:i:s') }}
                                </span>
                            <br>
                            {{ log.text }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
