{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Classement</h1>
                <hr>
                <div>
                    <ul>
                        {% for user in users %}
                            <li>
                                {% if user == app.user %}
                                    {{ user.username }}
                                    - Niveau {{ user.competences.level }}
                                {% else %}
                                    <a href="{{ path('user',{id:user.id,username:user.username}) }}">
                                        {{ user.username }}
                                        - Niveau {{ user.competences.level }}
                                    </a>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}