{% extends main_layout %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Mon profil</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Utilisateur {{ user.username }}</h3>
                    <hr>
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-action">Argent : {{ user.money }}$</li>
                        <li class="list-group-item list-group-item-action">Niveau : {{ user.competences.level }}</li>
                        <li class="list-group-item list-group-item-action">Vie : {{ user.competences.life }}</li>
                        <li class="list-group-item list-group-item-action">Ville : <a
                                    href="{{ path('user_list') }}">{{ user.city.name }}</a></li>
                        <li class="list-group-item list-group-item-action">Points d'action : {{ user.action }}</li>
                    </ul>
                </div>
            </div>
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Compétences</h3>
                    <hr>
                    <div id="user-competences" style="height: 100px;"></div>
                </div>
            </div>
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Objets utilisés</h3>
                    <hr>
                    <ul class="list-group">
                        {% for item in user.items if item.active %}

                            <li class="list-group-item list-group-item-action">
                                {{ item.weapon.name }}<br>
                                Utilisations {{ item.usages~'/'~item.weapon.uses }}.
                                <a href="{{ path('weapon_put',{id:item.id}) }}">Ranger</a>
                                <form action="{{ path('weapon_throw',{id:item.id}) }}" method="post">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('item_throw') }}">
                                    <input type="submit" value="Jeter" class="btn btn-primary">
                                </form>
                            </li>
                        {% endfor %}
                    </ul>
                    <h3>Objets disponibles</h3>
                    <hr>
                    <ul>
                        {% for item in user.items if not item.active %}
                            <li>
                                {{ item.weapon.name }}
                                ({{ item.price }}$) <br>
                                Utilisations {{ item.usages~'/'~item.weapon.uses }}.
                                <a href="{{ path('weapon_get',{id:item.id}) }}">Utiliser</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



{% block javascripts %}
    <script src="{{ asset('js/jquery.canvasjs.min.js') }}"></script>
    <script>
        window.onload = function () {
            var chart = new CanvasJS.Chart("user-competences", {
                animationEnabled: true,
                data: [{
                    type: "bar",
                    name: "companies",
                    axisYType: "secondary",
                    dataPoints: [
                        {y: {{ user.competences.attack }}, label: "Attaque"},
                        {y: {{ user.competences.defense }}, label: "Défense"},
                        {y: {{ user.competences.skill }}, label: "Habileté"},
                    ]
                }]
            });
            chart.render();
        }
    </script>
{% endblock %}
