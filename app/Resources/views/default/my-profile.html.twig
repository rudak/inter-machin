{% extends main_layout %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Mon profil</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Utilisateur {{ user.username }}</h3>
                    <hr>
                    <ul>
                        <li>Argent : {{ user.money }}$</li>
                        <li>Niveau : {{ user.competences.level }}</li>
                        <li>Power : {{ user.competences.power }}</li>
                    </ul>
                </div>
            </div>
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Compétences</h3>
                    <hr>
                    <ul>
                        <li>Attaque : {{ user.competences.attack }}</li>
                        <li>Défense : {{ user.competences.defense }}</li>
                        <li>Habileté : {{ user.competences.skill }}</li>
                    </ul>
                </div>
            </div>
            <div class="col">
                <div class="card card-body bg-light">
                    <h3>Objets utilisés</h3>
                    <hr>
                    <ul>
                        {% for item in user.items if item.active %}
                            <li>
                                {{ item.weapon.name }}<br>
                                Utilisations {{ item.usages~'/'~item.weapon.uses }}.
                                <a href="{{ path('weapon_put',{id:item.id}) }}">Ranger</a>
                                <form action="{{ path('weapon_throw',{id:item.id}) }}" method="post">
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('item_throw') }}">
                                    <input type="submit" value="Jeter" class="btn btn-primary">
                                </form>
                            </li>
                        {% endfor %}
                    </ul>
                    <h3>Objets disponibles</h3>
                    <hr>
                    <ul>
                        {% for item in user.items if not item.active %}
                            <li>
                                {{ item.weapon.name }}
                                ({{ item.price }}$) <br>
                                Utilisations {{ item.usages~'/'~item.weapon.uses }}.
                                <a href="{{ path('weapon_get',{id:item.id}) }}">Utiliser</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



{% block stylesheets %}
{% endblock %}
