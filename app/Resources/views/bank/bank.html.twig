{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Banque</h1>
                <hr>
                <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                <hr>
                <div class="row">
                    <div class="col">
                        <h3>Situation en cours</h3>
                        {% if loans|length %}
                            <ul>
                                {% for loan in loans if loan.status == 'request' or loan.status == 'validated' %}
                                    <li>
                                        {% if loan.status == 'request' %}
                                            {{ loan.amount }}$
                                            en attente de validation du banquier.
                                        {% elseif loan.status == 'validated' %}
                                            {{ loan.restToPay }}$
                                            a rembourser avant le
                                            {{ loan.expiration|date('d/m/Y \\à H:i') }}
                                        {% endif %}
                                        <br>
                                        {% if loan.status == 'validated' %}
                                            <a href="{{ path('bank_loan_refund',{id:loan.id}) }}"
                                               class="btn btn-sm btn-primary">Rembourser</a>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>

                        {% else %}
                            <p>Pas de comptes a rendre , pour l'instant.</p>
                        {% endif %}
                        <h3>Historique</h3>
                        <ul>
                            {% for loan in loans if loan.status == 'refused' or loan.status == 'closed' %}
                                <li>
                                    {% if loan.status == 'refused' %}
                                        {{ loan.date|date('d/m/Y') }} Demande de {{ loan.amount }}$ refusée par le banquier.
                                    {% elseif loan.status == 'closed' %}
                                        {{ loan.date|date('d/m/Y') }} Emprunt de {{ loan.amount }}$ : remboursé.
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col">
                        <h3>Actions</h3>
                        <p>
                            <a href="{{ path('bank_request') }}" class="btn btn-primary">
                                Demander un pret
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script>
        var api_bank_data_index_url = '{{ absolute_url(path('bank_index_data')) }}';
    </script>
    <script src="{{ asset('js/jquery.canvasjs.min.js') }}"></script>
    <script src="{{ asset('js/bank-index.js') }}"></script>
{% endblock %}