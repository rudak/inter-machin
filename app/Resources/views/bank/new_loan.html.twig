{% extends main_layout %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Demander un pret</h1>
                <hr>
                <p class="lead">
                    Vous pouvez demander jusqu'a {{ app.user.money/3|round }}$
                </p>
                <div class="content">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <p>
                        <button type="submit" class="btn btn-primary">Demander au banquier</button>
                    </p>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}