{% extends admin_layout %}

    {% block body %}
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <h1>Voir {{ user.username }}</h1>
                    </div>
                    <table class="table">
                        <tbody>

                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Dernière connexion</th>
                            <td>{{ user.lastLogin|date('d/m/Y \\à H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Date de (re)naissance</th>
                            <td>{{ user.dateOfBirth|date('d/m/Y \\à H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>En vie</th>
                            <td>
                                {% if user.alive %}
                                    <span class="badge badge-success">Oui</span>
                                {% else %}
                                    <span class="badge badge-danger">Non</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Argent</th>
                            <td>{{ user.money }}$</td>
                        </tr>
                        <tr>
                            <th>Vie</th>
                            <td>{{ user.competences.life }}</td>
                        </tr>
                        <tr>
                            <th>Attaque</th>
                            <td>{{ user.competences.attack }}</td>
                        </tr>
                        <tr>
                            <th>Défense</th>
                            <td>{{ user.competences.defense }}</td>
                        </tr>
                        <tr>
                            <th>Habileté</th>
                            <td>{{ user.competences.skill }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ dump(user.cities) }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <p>
                        <a href="{{ path('admin_user_index') }}" class="btn btn-primary">
                            Retour à la liste
                        </a>
                        <a href="{{ path('admin_user_edit', { 'id': user.id }) }}" class="btn btn-success">
                            Modifier
                        </a>
                    </p>
                    <div class="delete_form_wrapper">
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Supprimer" class="btn btn-danger">
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
