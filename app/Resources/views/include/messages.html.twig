{% for label, messages in app.flashes %}
    <div class="container">
        <div class="row">
            <div class="col">
                {%  for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                </div>
                {%  endfor %}
            </div>
        </div>
    </div>
{% endfor %}