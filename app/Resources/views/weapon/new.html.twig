{% extends admin_layout %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-header">
                <h1>Ajouter une arme</h1>
            </div>

            {{ form_start(form) }}
            <div class="row">
                <div class="col">{{ form_row(form.name) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.attack) }}</div>
                <div class="col">{{ form_row(form.defense) }}</div>
                <div class="col">{{ form_row(form.uses) }}</div>
                <div class="col">{{ form_row(form.price) }}</div>
            </div>
            <div class="row">
                <div class="col">{{ form_row(form.image.name) }}</div>
                <div class="col">
                    {{ form_row(form.image.file) }}
                    {% if weapon.image is not null %}
                        <img src="{{ asset(weapon.image.webpath) }}" alt="{{ weapon.image.name }}"
                             class="img-fluid mx-auto d-block img-thumbnail">
                    {% endif %}
                </div>
            </div>
            {{ form_widget(form) }}
            <p>
                <input type="submit" value="Ajouter" class="btn btn-success btn-lg"/>
            </p>
            {{ form_end(form) }}

                        <p>
    <a href="{{ path('admin_weapon_index') }}" class="btn btn-primary">
        Retour Ã  la liste
    </a></p></div>
    </div>
</div>
{% endblock %}
